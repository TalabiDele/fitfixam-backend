{
  "routes": [
    {
      "method": "GET",
      "path": "/likes/given",
      "handler": "likes.find",
      "config": {
        "policies": ["isTargetUserLoggedIn"]
      }
    },
    {
      "method": "GET",
      "path": "/likes/received",
      "handler": "likes.find",
      "config": {
        "policies": ["postAuthorIsMe"]
      }
    },
    {
      "method": "GET",
      "path": "/likes/count",
      "handler": "likes.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/likes",
      "handler": "likes.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/likes/:postId.id",
      "handler": "likes.delete",
      "config": {
        "policies": []
      }
    }
  ]
}
